{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es6",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
